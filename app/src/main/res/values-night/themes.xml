<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QeshtaExpenses" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Demo.BottomSheetDialog</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/system_bar_light_primary_dark</item>
        <item name="colorPrimaryVariant">@color/system_bar_dark</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/focus_action_light</item>
        <item name="colorSecondaryVariant">@color/primary_text_icon_dark</item>
        <item name="colorOnSecondary">@color/primary_text_icon_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--App Bar -->
    <style name="AppBar">
        <item name="android:background">@color/system_bar_light_primary_dark</item>
    </style>

    <!--Bottom Nav -->
    <style name="BottomNav">
        <item name="android:background">@color/background_dark</item>
    </style>

    <!--Logo -->
    <style name="MyLogoStyle">
        <item name="android:backgroundTint">@color/system_bar_light_primary_dark</item>
    </style>

    <!--Primary Text -->
    <style name="PrimaryText">
        <item name="android:textColor">@color/primary_text_icon_dark</item>
        <item name="drawableTint">@color/primary_text_icon_dark</item>
        <item name="buttonTint">@color/focus_action_dark</item>
        <item name="colorControlActivated">@color/focus_action_dark</item>
        <item name="backgroundTint">@color/disabled_text_icon_dark</item>
    </style>

    <!--Primary Text & Primary Icon -->
    <style name="PrimaryTextIcon">
        <item name="android:textColor">@color/primary_text_icon_dark</item>
        <item name="drawableTint">@color/primary_text_light</item>
    </style>

    <!--Secondary Text -->
    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text_dark</item>
    </style>

    <!--Secondary Icon -->
    <style name="SecondaryIcon">
        <item name="android:textColor">@color/secondary_text_dark</item>
    </style>

    <!--Button Login -->
    <style name="ButtonLogin">
        <item name="android:textColor">@color/primary_text_icon_dark</item>
        <item name="backgroundTint">@color/background_dark</item>
        <item name="strokeColor">@color/system_bar_light_primary_dark</item>
    </style>

    <!--Button Sign Up -->
    <style name="ButtonSignUp">
        <item name="android:textColor">@color/background_light</item>
    </style>

    <!--FAB -->
    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/focus_action_dark</item>
    </style>

    <!--Card -->
    <style name="MyCard">
        <item name="cardBackgroundColor">@color/row_bg_dark</item>
    </style>

    <!--Card Icon -->
    <style name="MyCardIcon">
        <item name="android:textColor">@color/primary_text_icon_dark</item>
        <item name="android:drawableTint">@color/focus_action_dark</item>
    </style>

    <!--Bottom Sheet Dialog -->
    <style name="BottomSheetDialog">
        <item name="android:textColor">@color/primary_text_icon_dark</item>
        <item name="backgroundTint">@color/row_bg_dark</item>
        <item name="android:drawableTint">@color/primary_text_icon_dark</item>
    </style>

    <!--Bottom Sheet Dialog Save Button -->
    <style name="BottomSheetDialogSaveButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/focus_action_dark</item>
    </style>

    <!--Bottom Sheet Dialog Cancel Button -->
    <style name="BottomSheetDialogCancelButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/disabled_text_icon_dark</item>
    </style>

    <!--Bottom Sheet Dialog Theme-->
    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>
    </style>
    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="android:background">@color/background_dark</item>
    </style>

    <!-- My Date Picker Dialog -->
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_icon_dark</item> <!-- header date, month color -->
        <item name="android:textColorSecondaryInverse">@color/primary_text_icon_dark</item> <!-- header year color -->
        <item name="android:colorAccent">@color/system_bar_dark</item> <!-- button color -->
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:textColorPrimary">@color/primary_text_icon_dark</item>
        <item name="android:headerBackground">@color/system_bar_light_primary_dark</item> <!-- header background color -->
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/system_bar_light_primary_dark</item> <!-- header background color -->
    </style>
    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/focus_action_dark</item>
    </style>

</resources>