<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QeshtaExpenses" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Demo.BottomSheetDialog</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/system_bar_light_primary_dark</item>
        <item name="colorOnPrimary">@color/background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/focus_action_light</item>
        <item name="colorSecondaryVariant">@color/primary_icon_light</item>
        <item name="colorOnSecondary">@color/primary_text_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Logo -->
    <style name="MyLogoStyle">
        <item name="android:backgroundTint">@color/primary_light</item>
    </style>

    <!--Primary Text -->
    <style name="PrimaryText">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <!--Secondary Text -->
    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text_icon_light</item>
    </style>

    <!--Secondary Icon -->
    <style name="SecondaryIcon">
        <item name="android:textColor">@color/secondary_text_icon_light</item>
    </style>

    <!--Button Login -->
    <style name="ButtonLogin">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="backgroundTint">@color/background_light</item>
        <item name="strokeColor">@color/primary_light</item>
    </style>

    <!--Button Sign Up -->
    <style name="ButtonSignUp">
        <item name="android:textColor">@color/background_light</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>
    </style>

    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Demo</item>
    </style>

    <!-- MyDatePickerDialog -->
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">@color/background_light</item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">@color/background_light</item> <!-- header year color -->
        <item name="android:colorAccent">@color/system_bar_light_primary_dark</item> <!-- button color -->
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>
    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/focus_action_light</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/primary_light</item> <!-- header background color -->
    </style>

</resources>